{
	"name": "frame-bridge",
	"private": true,
	"description": "Libraries for consistent, one-way data flow between browser frames.",
	"scripts": {
		"build": "pnpm --filter \"@frame-bridge/*\" build",
		"dev": "pnpm --stream -r dev",
		"lint": "pnpm -r lint",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
	},
	"devDependencies": {
		"prettier": "^3.5.3",
		"typescript": "^5.4.5",
		"vite": "^5.2.11",
		"vite-plugin-dts": "^3.9.1"
	},
	"packageManager": "pnpm@9.1.0"
}
