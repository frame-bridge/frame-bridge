{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"composite": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"rootDir": "src",
		"outDir": "dist"
	},
	"include": ["src"]
}
